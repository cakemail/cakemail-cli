{
  "name": "@cakemail-org/cakemail-cli",
  "version": "1.7.0",
  "description": "Official Cakemail CLI - Command-line interface for the Cakemail API",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "cakemail": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "generate:types": "openapi-typescript https://api.cakemail.com/openapi.json -o src/types/api.ts",
    "test": "npm run build && vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "npm run build && vitest run --coverage",
    "test:pty": "npm run build && vitest run tests/pty",
    "test:integration": "npm run build && vitest run tests/integration",
    "test:ci": "npm run build && vitest run --coverage --reporter=junit"
  },
  "keywords": [
    "cakemail",
    "cli",
    "email",
    "email-marketing",
    "api",
    "command-line",
    "campaigns",
    "transactional-email",
    "analytics"
  ],
  "author": {
    "name": "FranÃ§ois Lane",
    "email": "francois@cakemail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@cakemail-org/cakemail-sdk": "^2.0.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^12.0.0",
    "dotenv": "^16.4.0",
    "inquirer": "^9.3.8",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^3.2.4",
    "execa": "^8.0.1",
    "express": "^4.18.2",
    "openapi-typescript": "^7.8.0",
    "strip-ansi": "^7.1.2",
    "typescript": "^5.8.0",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "node-pty": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
